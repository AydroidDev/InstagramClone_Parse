<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/mainActivity_signUp_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="37dp"
        android:layout_marginTop="69dp"
        android:onClick="signup"
        android:text="SIGN UP"
        app:layout_constraintStart_toEndOf="@+id/mainActivity_SignIn_btn"
        app:layout_constraintTop_toBottomOf="@+id/mainActivity_passwordTxt" />

    <Button
        android:id="@+id/mainActivity_SignIn_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="signin"
        android:text="@string/common_signin_button_text"
        app:layout_constraintBaseline_toBaselineOf="@+id/mainActivity_signUp_btn"
        app:layout_constraintStart_toStartOf="@+id/mainActivity_passwordTxt" />

    <EditText
        android:id="@+id/mainActivity_nameTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="154dp"
        android:ems="10"
        android:hint="name:"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/mainActivity_passwordTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="51dp"
        android:ems="10"
        android:hint="password:"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="@+id/mainActivity_nameTxt"
        app:layout_constraintTop_toBottomOf="@+id/mainActivity_nameTxt" />
</androidx.constraintlayout.widget.ConstraintLayout>