<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UploadActivity">

    <EditText
        android:id="@+id/uploadActivity_comment"
        android:layout_width="306dp"
        android:layout_height="58dp"
        android:layout_marginStart="43dp"
        android:layout_marginBottom="73dp"
        android:ems="10"
        android:hint="comment:"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/uploadAcitivty_uploadBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uploadActivity_imgView" />

    <Button
        android:id="@+id/uploadAcitivty_uploadBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="113dp"
        android:onClick="upload"
        android:text="upload"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uploadActivity_comment" />

    <ImageView
        android:id="@+id/uploadActivity_imgView"
        android:onClick="chooseImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="66dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="39dp"
        app:layout_constraintBottom_toTopOf="@+id/uploadActivity_comment"
        app:layout_constraintEnd_toEndOf="@+id/uploadActivity_comment"
        app:layout_constraintStart_toStartOf="@+id/uploadActivity_comment"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/selectpicture" />
</androidx.constraintlayout.widget.ConstraintLayout>